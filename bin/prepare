#!/bin/bash
# -*- mode: bash; tab-width: 2; -*-
# vim: ts=2 sw=2 ft=bash noet

# source the Nos framework
. /opt/nos/common.sh

# initialize Nos with the original arguments
nos_init "$@"

# source common lib
. ${engine_lib_dir}/clojure.sh

# install sun*_java or openjdk*
java_install_runtime

clojure_install_runtime

# install leiningen
clojure_install_leiningen

# install node.js for static assets
nodejs_install_runtime

# install bower via npm if Bower.json is found
nodejs_install_bower

# persist all environment variables 
nos_persist_evars

# lein uberjar
clojure_lein_uberjar

# run custom build script if the project includes one
clojure_custom_build_script

# run bower install if Bower.json is found
nodejs_bower_install

# persist the current node.js version in the cache
nodejs_set_runtime

exit 0